<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%=raw post.title %></td>
        <td><%=raw  post.description %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) if can? :update, post %></td>
        <td><%= link_to("PDF",post_path(post, format: :pdf), method: 'get') %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } if can? :update, post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Post %>
<%= link_to 'New Post', new_post_path %>
<% end %>
